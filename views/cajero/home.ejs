<link rel="stylesheet" href="/public/css/cajero-home.css"/>

<main>
    <div id="container-cajero-home" class="d-flex justify-content-between">
        <div class="section-mesas">
            <p class="fw-bold fs-4 mb-3">Panel de mesas</p>
            <div class="mesas__filter d-flex align-items-center mb-3">
                <div class="mesas__filter-title me-3">
                    Piso:
                </div>
                <div class="mesas__filter-input">
                    <select id="select-pisos">
                        <option value="1">Uno</option>
                    </select>
                </div>
            </div>
            <div class="mesas__panel" id="mesas__panel">
            </div>
            <div class="mesas__information d-flex justify-content-center mt-3 mb-3">
                <div class="d-flex justify-content-center align-items-center me-5">
                    <div class="casilla me-3" style="background-color: rgb(78, 223, 85)"></div>
                    Libre
                </div>
                <div class="d-flex justify-content-center align-items-center me-5">
                    <div class="casilla me-3" style="background-color: rgb(50, 54, 240)"></div>
                    Pendiente/Preparaci√≥n
                </div>
                <div class="d-flex justify-content-center align-items-center me-5">
                    <div class="casilla me-3" style="background-color: rgb(120, 40, 190)"></div>
                    Precuenta
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="casilla me-3" style="background-color: rgb(186, 186, 186)"></div>
                    Inhabilitado
                </div>
            </div>
        </div>
        <div class="section-operaciones">
            <p class="fw-bold fs-4 mb-3">Operaciones</p>
            <div class="operaciones__card-alterno mb-3">
                <div class="d-flex justify-content-center container-img" style="width: 30%"><i class="fa-solid fa-money-bill operaciones__card-img"></i></div>
                <div class="operaciones__card-body" style="width: 70%">
                    <p class="operaciones__card-title">Total efectivo</p>
                    <p class="operaciones__card-text fw-bold">S/. <%= totalPay %></p>
                </div>
            </div>
            
            <div class="operaciones__card mb-3" id="btn-llevar">
                <div class="d-flex justify-content-center container-img" style="width: 30%"><i class="fa-solid fa-bag-shopping operaciones__card-img"></i></div>
                <div class="operaciones__card-body" style="width: 70%">
                    <p>Para llevar</p>
                </div>
            </div>
            <p class="fw-bold fs-4">Otros pedidos</p>
            <div class="container-pedidos">
                <div class="mt-3">
                    <a class="btn btn-primary d-flex justify-content-between align-items-center" style="width: 100%" data-bs-toggle="collapse" href="#collapseOrdersPrepared1" role="button" aria-expanded="false"  aria-controls="collapseExample" id="ordersToTakeAway">
                        Listos para llevar (1)
                        <div class="caret"></div>
                    </a>
                    <div class="collapse mt-3" style="width: 100%" id="collapseOrdersPrepared1">
                    </div>
                </div>
                <div class="mt-3">
                    <a class="btn btn-primary d-flex justify-content-between align-items-center" style="width: 100%" data-bs-toggle="collapse" href="#collapseOrdersPrepared2" role="button" aria-expanded="false" aria-controls="collapseExample" id="ordersForTable">
                        Listos para la mesa (1)
                        <div class="caret"></div>
                    </a>
                    <div class="collapse mt-3" style="width: 100%" id="collapseOrdersPrepared2">
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/cajero/home.js"></script>
<script src="/public/js/cajero/socket-home-cajero.js"></script>